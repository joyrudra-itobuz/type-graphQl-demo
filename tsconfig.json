{
  "compilerOptions": {
    "lib": ["es2020"],
    "target": "ES2021",
    "module": "CommonJS",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "jsx": "react",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false, // Set to false to enable emitting output
    "strictNullChecks": true,
    "noImplicitAny": false,
    "baseUrl": ".",
    "paths": {
      "*": ["src/*"]
    },
    "outDir": "./dist",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true // Specify the output directory
  },
  "include": ["src/**/*.ts", ".env.development"],
  "exclude": ["node_modules"]
}
